<Window x:Class="Recipe_Book.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Recipe_Book"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="style/MainStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid  Height="450" Width="800" >
        <Canvas x:Name="MainCanva" Background="Crimson" Height="450" Width="800">
            <Rectangle x:Name="RecipeRectangle" HorizontalAlignment="Left" 
            Height="350" Margin="10,54,0,0" 
            Stroke="Black" VerticalAlignment="Top" 
            Width="260" RadiusX="20" RadiusY="20" Fill="White"/>
            <StackPanel Margin="19,65,540,326" Height="35
             " Width="235" MinWidth="3">
                <Button x:Name="AddSection" Width="90" Height="30" Margin="140,0,0,0" Background="Crimson"
             Content="Добавить" Foreground="White"
             FontSize="14" Click="AddSection_Click" 
             RenderTransformOrigin="1.125,-1.767">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
            <ListView x:Name="RecipeList" HorizontalAlignment="Left" 
   Height="279" Margin="10,104,0,0" 
   VerticalAlignment="Top" Width="260" 
          BorderBrush="{x:Null}" 
          Background="{x:Null}" >

                <StackPanel x:Uid="1" Height="50" MouseRightButtonDown="MouseRight_RecipeList">
                    <Image Style="{StaticResource ImageRecipeListView}" Source="/1.png" />
                    <TextBlock   Text="Первые блюда"/>
                    <Button x:Uid="0" Click="Plus_Click">
                        <Image Width="15" Height="15" Source="/4.png" StretchDirection="DownOnly" Stretch="Fill"/>
                    </Button>
                </StackPanel>
                <StackPanel x:Uid="2" Height="50" MouseRightButtonDown="MouseRight_RecipeList">
                    <Image Style="{StaticResource ImageRecipeListView}" Source="/2.png"/>
                    <TextBlock Text="Вторые блюда"/>
                    <Button x:Uid="1" Click="Plus_Click">
                        <Image Width="15" Height="15" Source="/4.png" StretchDirection="DownOnly" Stretch="Fill"/>
                    </Button>
                </StackPanel>
                <StackPanel x:Uid="3" Height="50" MouseRightButtonDown="MouseRight_RecipeList" >

                    <Image Style="{StaticResource ImageRecipeListView}" Source="/3.png" />
                    <TextBlock  Text="Салаты"/>
                    <Button x:Uid="2" Click="Plus_Click">
                        <Image Width="15" Height="15" Source="/4.png" StretchDirection="DownOnly" Stretch="Fill"/>
                    </Button>
                </StackPanel>
                <StackPanel x:Uid="5" Height="50" MouseRightButtonDown="MouseRight_RecipeList">

                    <Image Style="{StaticResource ImageRecipeListView}" Source="/5.png" />
                    <TextBlock  Text="Завтрак"/>
                    <Button x:Uid="3" Click="Plus_Click">
                        <Image Width="15" Height="15" Source="/4.png" StretchDirection="DownOnly" Stretch="Fill"/>
                    </Button>
                </StackPanel>
                <StackPanel x:Uid="6" Height="50" MouseRightButtonDown="MouseRight_RecipeList">

                    <Image Style="{StaticResource ImageRecipeListView}" Source="/6.png" />
                    <TextBlock  Text="Десерты"/>
                    <Button x:Uid="4" Click="Plus_Click">
                        <Image Width="15" Height="15" Source="/4.png" StretchDirection="DownOnly" Stretch="Fill"/>
                    </Button>
                </StackPanel>
            </ListView>
            <Rectangle HorizontalAlignment="Left" 
     Height="350" Margin="275,54,0,0" 
     Stroke="Black" VerticalAlignment="Top" 
     Width="505" RadiusX="20" RadiusY="20" Fill="White" Cursor="None"/>
            <TextBox x:Name="Text1" 
          HorizontalAlignment="Left"
          Margin="605,74,0,0" 
          TextWrapping="Wrap"
          Text="TextBox" 
          VerticalAlignment="Top" 
          Width="165" Height="25" 
          TextAlignment="Right" 
          BorderBrush="{x:Null}"/>
            <Image Height="95" Width="150" Margin="15,2,0,0" Source="/7.png"/>
            <Button Width="90" Height="30" Margin="280,10,50,0" Content="Назад" Background="#FFEA627E" FontSize="18" Foreground="White"/>
            <Label Width="270" Height="54"
                   Content="Мои рецепты" FontSize="36" FontFamily="Sweet Mavka Script" Foreground="White" HorizontalAlignment="Center" HorizontalContentAlignment="Right" VerticalContentAlignment="Stretch" Padding="3,3,3,3"
                   Canvas.Left="500" VerticalAlignment="Top"/>
            <Image Height="40" Width="40" Margin="510,5,0,0" Source="/8.png"/>
            <StackPanel x:Name="ViewRecipePanel" Orientation="Vertical" 
                        Width="480" Height="310" Margin="287,80,0,0">
                <Image x:Name="ImageRecipe" Height="100" Width="150" IsEnabled="False" />
                <TextBox x:Name="NameRecipe"
                         Height="25" Width="480" Text="Название" 
                         HorizontalContentAlignment="Center"
                         FontSize="18" FontWeight="Bold" BorderBrush="{x:Null}"/>


                <ComboBox x:Name="Ingredients"  IsEditable="True" IsReadOnly="True" Text="Ингредиенты:"
                               Height="30" FontSize="14"
                         PreviewMouseLeftButtonDown="ComboBox_OnPreviewMouseLeftButtonDown">

                    <ComboBoxItem Content="hdhh"/>
                        <ComboBoxItem Content="djdjjdj"/>
                        <ComboBoxItem Content="hdhddhdh"/>
                        <ComboBoxItem Content="jddddh"/>
                    </ComboBox>

                <TextBlock x:Name="ResipeText" Width="480" Height="125" Text="Описание рецепта:"
                           FontSize="14" FontWeight="Normal"/>
            </StackPanel>
            <StackPanel x:Name="RedMenu" Height="80" Width="NaN" Orientation="Vertical" 
            Background="WhiteSmoke" Margin="270,188,343,182" MouseLeave="MouseLeaveMenuRed" Visibility="Hidden">

                <Button x:Name="RedSection" Width="175" Height="30" Margin="3,10,10,10" 
            Background="{x:Null}"
Content="Редактировать" Foreground="Black"
FontSize="11" RenderTransformOrigin="1.125,-1.767" HorizontalAlignment="Left"
            HorizontalContentAlignment="Left" FontWeight="Bold" Click="Red_Click"/>
                <Button x:Name="DelSection" Width="175" Height="30" Margin="3,-8,10,10" 
            Background="{x:Null}"
Content="Удалить" Foreground="Black"
FontSize="11" RenderTransformOrigin="1.125,-1.767" HorizontalAlignment="Left"
            HorizontalContentAlignment="Left" FontWeight="Bold" Click="Dell_Click"/>
            </StackPanel>
        </Canvas>

    </Grid>
</Window>
